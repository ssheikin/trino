<settings>
    <servers>
        <!-- Starburst Maven Snapshot Repository -->
        <server>
            <id>starburstdata-sep.snapshots</id>
            <username>${env.mavenUser}</username>
            <password>${env.mavenCredentials}</password>
            <configuration>
                <httpConfiguration>
                    <all>
                        <usePreemptive>true</usePreemptive>
                    </all>
                </httpConfiguration>
            </configuration>
        </server>

        <!-- Starburst Maven Release Repository -->
        <server>
            <id>starburstdata-sep.releases</id>
            <username>maven</username>
            <password>${env.mavenCredentials}</password>
            <configuration>
                <httpConfiguration>
                    <all>
                        <usePreemptive>true</usePreemptive>
                    </all>
                </httpConfiguration>
            </configuration>
        </server>

        <!-- Starburst Docker registry -->
        <server>
            <id>harbor.starburstdata.net</id>
            <username>admin</username>
            <password>${env.dockerCredentials}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>oss-release</id>
            <properties>
                <gpg.skip>true</gpg.skip>
            </properties>
        </profile>
        <profile>
            <id>starburst</id>
            <properties>
                <gpg.skip>true</gpg.skip>
                <air.repository.snapshot.id>starburstdata-sep.snapshots</air.repository.snapshot.id>
                <air.repository.snapshot.name>Starburstdata Snapshots</air.repository.snapshot.name>
                <air.repository.snapshot.url>https://starburstdata-sep-cicd-843985043183.d.codeartifact.us-east-2.amazonaws.com/maven/snapshots/</air.repository.snapshot.url>
                <air.repository.release.id>starburstdata-sep.releases</air.repository.release.id>
                <air.repository.release.name>Starburstdata Releases</air.repository.release.name>
                <air.repository.release.url>https://starburstdata-sep-cicd-843985043183.d.codeartifact.us-east-2.amazonaws.com/maven/releases/</air.repository.release.url>
            </properties>
        </profile>
    </profiles>
</settings>
